<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/row_holder_motion_left_scene">


    <ImageView
        android:id="@+id/row_golder_motion_imagePlanet"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_planeta_2" />

    <TextView
        android:id="@+id/row_golder_motion_txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Capivara"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/row_golder_motion_imagePlanet"
        app:layout_constraintStart_toStartOf="@+id/row_golder_motion_imagePlanet"
        app:layout_constraintTop_toBottomOf="@+id/row_golder_motion_imagePlanet"
        tools:textColor="@color/black" />

    <TextView
        android:id="@+id/row_golder_motion_txtAxis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Android development"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/row_golder_motion_txtName"
        app:layout_constraintStart_toStartOf="@+id/row_golder_motion_txtName"
        app:layout_constraintTop_toBottomOf="@+id/row_golder_motion_txtName"
        tools:textColor="@color/black" />
</androidx.constraintlayout.motion.widget.MotionLayout>